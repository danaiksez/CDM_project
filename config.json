{
    "name": "Mnist_LeNet",
    "n_gpu": 1,

    "arch": {
        "type": "ThreeEncoders",
        "args": {
            "embedding_size": 300,
            "hidden_size": 300,
            "batch_size": 1,
            "num_classes": 7,
            "batch_first": "True",
            "bidirectional": "False"
        }
    },
    "train_data_loader": {
        "type": "DailyDialogDataloader",
        "args":{
            "data_dir": "data/EMNLP_dataset/",
            "split": "train",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 0
        }
    },
    "valid_data_loader": {
        "type": "DailyDialogDataloader",
        "args":{
            "data_dir": "data/EMNLP_dataset/",
            "split": "validation",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 1
        }
    },
    "test_data_loader": {
        "type": "DailyDialogDataloader",
        "args":{
            "data_dir": "data/EMNLP_dataset/",
            "split": "test",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "CrossEntropy_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
