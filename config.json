{
    "name": "Mnist_LeNet",
    "n_gpu": 0,

    "arch": {
        "type": "GRU",
        "args": {
            "input_size": 300,
            "hidden": 300,
            "batch_size": 1,
            "num_layers": 1,
            "output_size": 7,
            "batch_first": "True",
            "attention": "True"
        }
    },
    "train_data_loader": {
        "type": "DailyDialogDataloader",
        "args":{
            "data_dir": "data/EMNLP_dataset/",
            "split": "train",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 0
        }
    },
    "valid_data_loader": {
        "type": "DailyDialogDataloader",
        "args":{
            "data_dir": "data/EMNLP_dataset/",
            "split": "validation",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 1
        }
    },
    "test_data_loader": {
        "type": "DailyDialogDataloader",
        "args":{
            "data_dir": "data/EMNLP_dataset/",
            "split": "test",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "CrossEntropy_loss",
    "metrics": [
        "accuracy", 
        "precision_0", "precision_1", "precision_2", "precision_3", "precision_4" , "precision_5" , "precision_6",
        "recall_0" , "recall_1" , "recall_2" , "recall_3" , "recall_4" , "recall_5" ,"recall_6" ,
        "f1_0", "f1_1", "f1_2", "f1_3", "f1_4", "f1_5", "f1_6" 
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 5,

        "tensorboard": true
    }
}
